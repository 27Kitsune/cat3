<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.volunteeradmin.VolunteeradminFragment">

    <TextView
        android:id="@+id/recruitment_application"
        android:layout_width="412dp"
        android:layout_height="35dp"
        android:background="@color/teal_700"
        android:padding="5dp"
        android:text="Recruitment Application"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/eventListView"
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:divider="@color/teal_700"
        android:dividerHeight="1dp"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recruitment_application" />

    <TextView
        android:id="@+id/volunteer_application"
        android:layout_width="412dp"
        android:layout_height="35dp"
        android:background="@color/teal_700"
        android:padding="5dp"
        android:text="Volunteer Application"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventListView" />

    <ListView
        android:id="@+id/volunteerListView"
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:layout_marginStart="5dp"
        android:divider="@color/teal_700"
        android:dividerHeight="1dp"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/volunteer_application" />

    <TextView
        android:id="@+id/approvedrecruitment"
        android:layout_width="412dp"
        android:layout_height="35dp"
        android:background="@color/teal_700"
        android:padding="5dp"
        android:text="Approved Recruitment"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/volunteerListView" />

    <ListView
        android:id="@+id/approvedListView"
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:layout_marginStart="5dp"
        android:divider="@color/teal_700"
        android:dividerHeight="1dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/approvedrecruitment" />

</androidx.constraintlayout.widget.ConstraintLayout>
